<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:textColor="@android:color/white">
        <shape android:shape="rectangle">
            <stroke android:color="@color/white" android:width="2px"/>
            <corners android:radius="60px" />
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>
    <item android:state_pressed="true" android:textColor="@color/white">
        <shape android:shape="rectangle">
            <corners android:radius="60px" />
            <solid android:color="@color/common_gray" />
        </shape>
    </item>
</selector>