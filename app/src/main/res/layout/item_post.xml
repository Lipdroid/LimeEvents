<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20px"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="20px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="260px"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/post_image"
                    android:layout_width="400px"
                    android:layout_height="260px"
                    android:scaleType="fitXY"
                    android:src="@color/common_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="330px"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <apom.org.researchLime.limeevents.customViews.CustomFontTextView
                        android:id="@+id/post_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30px"
                        android:singleLine="true"
                        android:tag="50"
                        android:textStyle="bold"
                        android:text="Abundant Living city church"
                        android:textColor="@color/colorPrimary"
                        android:textSize="50px" />

                    <apom.org.researchLime.limeevents.customViews.CustomFontTextView
                        android:id="@+id/post_address"
                        android:layout_width="match_parent"
                        android:layout_height="60px"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="10px"
                        android:maxLines="2"
                        android:singleLine="true"
                        android:tag="40"
                        android:text="Location:176 okland,tokyo"
                        android:textColor="#747474"
                        android:textSize="40px" />


                    <apom.org.researchLime.limeevents.customViews.CustomFontTextView
                        android:id="@+id/post_rate"
                        android:layout_width="match_parent"
                        android:layout_height="60px"
                        android:layout_marginLeft="30px"
                        android:maxLines="2"
                        android:singleLine="true"
                        android:tag="40"
                        android:text="Rate:5"
                        android:textColor="#747474"
                        android:textSize="40px" />

                    <apom.org.researchLime.limeevents.customViews.CustomFontTextView
                        android:id="@+id/post_organizer"
                        android:layout_width="match_parent"
                        android:layout_height="80px"
                        android:layout_marginLeft="30px"
                        android:maxLines="2"
                        android:singleLine="true"
                        android:tag="40"
                        android:text="Organizer"
                        android:textColor="#747474"
                        android:textSize="40px" />


                </LinearLayout>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:background="@color/white"
                android:visibility="gone" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/notification_footer_tv_show_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/card_view"
        android:layout_marginRight="41px"
        android:background="@android:color/transparent"
        android:paddingBottom="15px"
        android:tag="35"
        android:text="Show More"
        android:textColor="@color/colorPrimary"
        android:textSize="35px"
        android:visibility="visible" />
</RelativeLayout>